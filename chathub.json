{
  "api": {
    "name": "ChatHub",
    "version": "2.0",
    "description": "A comprehensive API for real-time online communication and collaboration",
    "authentication": {
      "type": "Bearer Token",
      "header": "Authorization"
    },
    "endpoints": {
      "register": {
        "url": "/users",
        "method": "POST",
        "request": {
          "username": "string",
          "email": "string",
          "password": "string"
        },
        "response": {
          "user_id": "string",
          "token": "string"
        },
        "description": "Register a new user"
      },
      "login": {
        "url": "/login",
        "method": "POST",
        "request": {
          "email": "string",
          "password": "string"
        },
        "response": {
          "user_id": "string",
          "token": "string"
        },
        "description": "Authenticate a user and get a session token"
      },
      "create_channel": {
        "url": "/channels",
        "method": "POST",
        "request": {
          "name": "string",
          "description": "string",
          "type": "string" 
        },
        "response": {
          "channel_id": "string",
          "owner_id": "string",
          "created_at": "string"
        },
        "description": "Create a new communication channel"
      },
      "join_channel": {
        "url": "/channels/{channel_id}/members",
        "method": "POST",
        "request": {
          "user_id": "string"
        },
        "response": {
          "member_id": "string",
          "joined_at": "string"
        },
        "description": "Join an existing communication channel"
      },
      "send_message": {
        "url": "/channels/{channel_id}/messages",
        "method": "POST",
        "request": {
          "sender_id": "string",
          "content": "string"
        },
        "response": {
          "message_id": "string",
          "timestamp": "string"
        },
        "description": "Send a message to a communication channel"
      },
      "get_messages": {
        "url": "/channels/{channel_id}/messages",
        "method": "GET",
        "request": {
          "limit": "integer",
          "offset": "integer"
        },
        "response": [
          {
            "message_id": "string",
            "sender_id": "string",
            "content": "string",
            "timestamp": "string"
          }
        ],
        "description": "Retrieve messages from a communication channel"
      },
      "create_group": {
        "url": "/groups",
        "method": "POST",
        "request": {
          "name": "string",
          "description": "string",
          "owner_id": "string"
        },
        "response": {
          "group_id": "string",
          "created_at": "string"
        },
        "description": "Create a new group"
      },
      "add_group_member": {
        "url": "/groups/{group_id}/members",
        "method": "POST",
        "request": {
          "user_id": "string"
        },
        "response": {
          "member_id": "string",
          "joined_at": "string"
        },
        "description": "Add a user to an existing group"
      },
      "send_group_message": {
        "url": "/groups/{group_id}/messages",
        "method": "POST",
        "request": {
          "sender_id": "string",
          "content": "string"
        },
        "response": {
          "message_id": "string",
          "timestamp": "string"
        },
        "description": "Send a message to a group"
      },
      "get_group_messages": {
        "url": "/groups/{group_id}/messages",
        "method": "GET",
        "request": {
          "limit": "integer",
          "offset": "integer"
        },
        "response": [
          {
            "message_id": "string",
            "sender_id": "string",
            "content": "string",
            "timestamp": "string"
          }
        ],
        "description": "Retrieve messages from a group"
      }
    }
  }
}
